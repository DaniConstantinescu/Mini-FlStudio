<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FF34444E"
    tools:context=".DrumPad">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bNV2"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#526b7a"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backDrumPad"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="#526b7a"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/back_arrow" />
    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/gb1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        app:buttonColor="@color/colorPrimary"
        app:cornerRadius="10dp"
        app:glowColor="@color/colorPrimary"
        app:layout_constraintBottom_toTopOf="@+id/gb4"
        app:layout_constraintEnd_toStartOf="@+id/gb2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bNV2"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/gb2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        app:buttonColor="#ffff00"
        app:cornerRadius="10dp"
        app:glowColor="#ffff00"
        app:layout_constraintBottom_toTopOf="@+id/gb5"
        app:layout_constraintEnd_toStartOf="@+id/gb3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gb1"
        app:layout_constraintTop_toBottomOf="@+id/bNV2"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/gb3"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        app:buttonColor="#ff0000"
        app:cornerRadius="10dp"
        app:glowColor="#ff0000"
        app:layout_constraintBottom_toTopOf="@+id/gb6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gb2"
        app:layout_constraintTop_toBottomOf="@+id/bNV2"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp" />


    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/gb4"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        app:buttonColor="#cc0099"
        app:cornerRadius="10dp"
        app:glowColor="#cc0099"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gb5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gb1"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/gb5"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        app:buttonColor="#ff3399"
        app:cornerRadius="10dp"
        app:glowColor="#ff3399"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/gb6"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gb4"
        app:layout_constraintTop_toBottomOf="@+id/gb2"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp" />

    <com.sanojpunchihewa.glowbutton.GlowButton
        android:id="@+id/gb6"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:textColor="@color/white"
        app:buttonColor="#0066ff"
        app:cornerRadius="10dp"
        app:glowColor="#0066ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gb5"
        app:layout_constraintTop_toBottomOf="@+id/gb3"
        app:pressedGlowSize="25dp"
        app:unpressedGlowSize="20dp" />


</androidx.constraintlayout.widget.ConstraintLayout>